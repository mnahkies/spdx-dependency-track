{
  "name": "spdx-dependency-track",
  "version": "0.1.0",
  "packageManager": "yarn@4.1.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "husky",
    "dev": "yarn migrate && next dev",
    "package": "docker build -t spdx-dependency-track --progress=plain .",
    "start": "next start",
    "lint": "biome lint --write .",
    "format": "biome check --write .",
    "docs:generate": "yarn markdown-toc -i --bullets=- ./README.md",
    "migrate": "dotenvx run -- ./bin/migrate.sh",
    "migrate-generate": "dotenvx run -- ./bin/migrate-generate.sh",
    "migrate-rehash": "dotenvx run -- atlas migrate hash --dir 'file://migrations",
    "ci-build": "./bin/build.sh",
    "ci-test": "echo 'no tests yet'",
    "ci-lint": "next lint",
    "ci-format": "biome ci ."
  },
  "dependencies": {
    "@ariga/atlas": "^0.32.1",
    "@dotenvx/dotenvx": "^0.27.2",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@mui/material-nextjs": "^5.16.14",
    "@nahkies/typescript-fetch-runtime": "^0.20.0",
    "@nahkies/typescript-koa-runtime": "^0.20.0",
    "@tanstack/react-query": "^5.75.7",
    "@tanstack/react-query-devtools": "^5.75.7",
    "@tanstack/react-query-next-experimental": "^5.75.7",
    "better-sqlite3": "^9.6.0",
    "next": "14.2.28",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.3",
    "semver": "^7.7.1",
    "spdx-expression-parse": "^4.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nahkies/openapi-code-generator": "^0.20.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.17",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@types/semver": "^7.7.0",
    "@types/spdx-expression-parse": "^3.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "markdown-toc": "^1.2.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn biome lint --write --no-errors-on-unmatched",
      "yarn biome check --write --no-errors-on-unmatched"
    ],
    "*.md": [
      "sh -c 'yarn docs:generate'"
    ]
  }
}
